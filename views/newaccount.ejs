<!doctype html>
<html>
	<head>
		<title>Corsica - Create Account</title>
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
		<link rel="stylesheet" href="/css/styles.css">

		<link href='http://fonts.googleapis.com/css?family=Maven+Pro' rel='stylesheet' type='text/css'>
		<script type='text/javascript' src="/js/libs/livevalidation/livevalidation.js"></script>
		<style>
		body 		{ padding-top:80px; }
		</style>
	</head>
	<body>
		<div id="form_view">

			<div id="navbar">
				<div class="navbar navbar-red navbar-fixed-top" role="navigation" id="navbar_rest">
					<div class="container">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a class="navbar-brand" href="/client">CORSICA</a>
						</div>

						<div class="navbar-collapse collapse">

							<ul class="nav navbar-nav navbar-right">
								<li id="login"><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>

			<div class="container main_form">
				<div class="col-sm-8 col-sm-offset-2">

					<h1><span class="fa fa-sign-in"></span> Create an Account</h1>

					<% if (message.length > 0) { %>
					<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<!-- LOGIN FORM -->
					<form action="/api/makeauser" method="post">
						<div class="form-group">
							<label>Email*</label>
							<input type="text" class="form-control" name="email" id="inputEmail">
						</div>
						<div class="form-group">
							<label>Password*</label>
							<input type="password" class="form-control" name="password" id="inputPassword">
						</div>

						<div class="form-group">
							<div class="row">

								<div class="col-sm-6">
									<label>First Name*</label>
									<input type="text" class="form-control" name="firstName" id="inputFirstName">
								</div>

								<div class="col-sm-6">
									<label>Last Name*</label>
									<input type="text" class="form-control" name="lastName" id="inputLastName">
								</div>

							</div>
							
						</div>

						<div class="form-group">
							<label>Phone Number</label>
							<input type="tel" class="form-control" name="phoneNumber">
						</div>
						<div class="form-group">
							<div class="checkbox">
								<label>
									<input type="checkbox" value="" name="textPreference">Recieve text notification?
								</label>
							</div>
						</div>

						<div class="form-group">
							<label>User Access Level</label>
							<!-- Single button -->
							<select class="form-control" name="access">
							    <option value="advisor">Advisor</option>
							    <option value="student">Student</option>
							    <option value="scheduler">Scheduler</option>
							</select>
						</div>

						<button type="submit" class="btn btn-red btn-lg">Create Account</button>
					</form>

				</div>
			</div>

			<footer id="footer">
				<div class="container" id="footer_view">
					<div class="row col-sm-12">
						<div class="col-sm-4">
							<ul>
								<li><a href="">About Us</a></li>
								<li><a href="">FAQ</a></li>
								<li><a href="">CS 411 Red Team</a></li>
								<li><a href="">ODU CS Department</a></li>
							</ul>
						</div>
					</div>
				</div>
			</footer>

		</div>

		<script type='text/javascript'>

			var inputFirstName = new LiveValidation( "inputFirstName", { validMessage: "Valid Firstname", wait: 500 } );
			inputFirstName.add( Validate.Presence, { failureMessage: "Firstname Required" } );

			var inputLastName = new LiveValidation( "inputLastName", { validMessage: "Valid Lastname", wait: 500 } );
			inputLastName.add( Validate.Presence, { failureMessage: "Lastname Required" } );

			var inputEmail = new LiveValidation( "inputEmail", { validMessage: "Valid Email!", wait: 500 } );
			inputEmail.add( Validate.Presence, { failureMessage: "Email Required" } );
			inputEmail.add( Validate.Email, { failureMessage: "Invalid email address!" } );
			//inputEmail.add( Validate.Format, { pattern: /cs.odu.edu/i, failureMessage: "CS Email Only" } );

			var inputPassword = new LiveValidation( "inputPassword", { validMessage: "Valid Password!", wait: 500 } );
			inputPassword.add( Validate.Presence, { failureMessage: "Password Required" } );

		</script>
	</body>
</html>