<!doctype html>
<html>
	<head>
		<title>Corsica</title>
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
		<link rel="stylesheet" href="/css/styles.css">
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<link href='http://fonts.googleapis.com/css?family=Maven+Pro' rel='stylesheet' type='text/css'>
		<script type='text/javascript' src="/js/libs/livevalidation/livevalidation.js"></script>
		<style>
			body { padding-top:170px; }
			footer{ position: relative; margin-top:170px;}
		</style>
	</head>
	<body>
		<div id="login_view">

			<div id="navbar">
				<div class="navbar navbar-red navbar-fixed-top" role="navigation" id="navbar_rest">
					<div class="container">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a class="navbar-brand" href="/client">CORSICA</a>
						</div>
					</div>
				</div>
			</div>


			<div id="bg">
				<img src="/img/mainbg.png" alt="">
			</div>

			<div class="container">
				<div class="col-sm-6 col-sm-offset-3" id="loginbox">

					<h1><span class="fa fa-sign-in"></span> Login</h1>

					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<!-- LOGIN FORM -->
					<form action="/login" method="post">
						<div class="form-group">
							<label>Email</label>
							<input type="text" class="form-control" name="email">
						</div>
						<div class="form-group">
							<label>Password</label>
							<input type="password" class="form-control" name="password">
						</div>

						<button type="submit" class="btn btn-login btn-lg">Corsica Login</button>
					</form>

					<hr>

					<p>Need an account? <a href="/signup">Signup</a></p>
					<p>Or go <a href="http://cs.odu.edu/~411red">home</a>.</p>

				</div>
			</div>
		</div>

		<footer id="footer">
			<div class="container" id="footer_view">
				<div class="row col-sm-12">
					<div class="col-sm-4">
						<ul>
							<li><a href="/about">About Us</a></li>
							<li><a href="/faq">FAQ</a></li>
							<li><a href="http://www.cs.odu.edu/~411red" target="_blank">CS 411 Red Team</a></li>
							<li><a href="http://www.cs.odu.edu/" target="_blank">ODU CS Department</a></li>
						</ul>
					</div>
				</div>
			</div>
		</footer>

	</body>
</html>
