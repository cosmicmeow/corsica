<!doctype html>
<html>
	<head>
		<title>Corsica</title>
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
		<link rel="stylesheet" href="/css/styles.css">
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<link href='http://fonts.googleapis.com/css?family=Maven+Pro' rel='stylesheet' type='text/css'>
		<script type='text/javascript' src="/js/libs/livevalidation/livevalidation.js"></script>
		<style>
			body 		{ padding-top:80px; }
		</style>
	</head>
	<body>
		<div id="login_view">
			<div id="bg">
				<img src="/img/mainbg.png" alt="">
			</div>

			<div class="container">
				<div class="col-sm-6 col-sm-offset-3" id="loginbox">

					<h1><span class="fa fa-sign-in"></span> Login</h1>

					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<!-- LOGIN FORM -->
					<form action="/login" method="post">
						<div class="form-group">
							<label>Email</label>
							<input type="text" class="form-control" name="email">
						</div>
						<div class="form-group">
							<label>Password</label>
							<input type="password" class="form-control" name="password">
						</div>

						<button type="submit" class="btn btn-login btn-lg">Corsica Login</button>
					</form>

					<hr>

					<p>Need an account? <a href="/signup">Signup</a></p>
					<p>Or go <a href="http://cs.odu.edu/~411red">home</a>.</p>

				</div>
			</div>
		</div>

	</body>
</html>
